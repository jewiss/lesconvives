
<div class="container-new">
<div class="img" style="background-image: url(https://images.unsplash.com/photo-1528605248644-14dd04022da1?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=750&q=80);">
      <div class="sign-in">
        <h2 style="color:white; font-weight:bolder">Les Convives</h2>
        <h2>Log in</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>

            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "btn-login btn-lesconvives" %>
          </div>
          <p><%= link_to "Sign up", new_registration_path(resource_name), class: "sign" %></p>

          <p><%= link_to "Forgot your password?",  new_password_path(resource_name) %></p>
        <% end %>
      </div>
</div>
