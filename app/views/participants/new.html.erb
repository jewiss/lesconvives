<div class="top-div d-flex justify-content-center">
  <p>
    <%= @event.name %>
    <%= @event.date %>
  </p>

</div>

  <div class="bottom-div">
    <div class="btn-middle">
      <%= form_tag new_event_participant_path(@event), method: :get do %>
      <div class="d-flex justify-content-center align-items-center">
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
            id:"search_query",
          placeholder: "Search for a friend"
        %>
      <% end %>

          <%= link_to "Go!", restaurants_path, class: "btn-lesconvives" %>

      </div>
    </div>

    <div class="friend-cards pt-6">
      <% @users.each do |user| %>
        <div class="card-avatar-add">
          <%= cl_image_tag user.profile_picture.key, class: "avatar" %>
          <p class="avatar-name">
            <%= user.first_name %>
          </p>
          <%= link_to event_participants_path(user: user.id, participant: @participant), method: :post, class: "add-button" do %>
            <i class="fas fa-plus-circle"> </i>
          <% end %>

        </div>
      <% end %>
    </div>
  </div>
