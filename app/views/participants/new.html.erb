<div class="top-div d-flex justify-content-center">
  <p>
    <%= @event.name %>
    <%= @event.date %>
  </p>

</div>

  <div class="bottom-div">
    <div class="btn-middle">
      <%= form_tag new_event_participant_path(@event), method: :get do %>
      <div class="d-flex justify-content-center align-items-center">
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
            id:"search_query",
          placeholder: "Search for a friend"
        %>
      <% end %>

          <%= link_to "Go!", restaurants_path, class: "btn-lesconvives" %>

      </div>
    </div>

    <div class="container pt-4">
      <% @users.each do |user| %>
      <div class="card">
        <%= cl_image_tag user.profile_picture.key, class: "avatar" %>
      <%= user.first_name %>
      </div>
      <% end %>

    </div>

  </div>
